[all]
bears = LineCountBear, FilenameBear
files = **.yaml, **.toml, **.rst, **.md
file_naming_convention = snake
max_line_length = 120
max_lines_per_file = 2000

[all.yaml]
bears = YAMLLintBear
files = **.yaml, **.yml
ignore = .zuul.yaml
max_line_length = 120

[zuul.yaml]
bears = YAMLLintBear
files = .zuul.yaml
max_line_length = 180
